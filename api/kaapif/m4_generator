makeheader() {
cat <<ENDDDD 
$1 KAAPI/KaapiF interface
$2 -----------------------------------------
$2 by Fabien Le Mentec and Thierry Gautier and Vincent Danjean
$2 (c) INRIA, projet MOAIS, 2011-2012
$2 See Copyright file.
$2 *********************************************************
$2 WARNING! This file has been automatically generated by M4
$2 *********************************************************
$3
ENDDDD
}

makeswitchadaptative() {
cat <<ENDDDD 
#define KAAPIF_MAX_ARGS $MAX_NUMBER_PARAMS
#define KAAPIF_ADAPTIVE_SWITCH(__w, __i, __j, __tid) \\
switch((__w)->nargs) { \\
ENDDDD
}


makeendswitch() {
cat <<ENDDDD 
default: kaapi_abort(); break ;\\
}
ENDDDD
}



#############################################################
## loop for file bodies
#############################################################

NUMBER=0
COUNTER=$1
MAX_NUMBER_PARAMS=$1
## `expr $1 + 1`

makeheader "/*" " *" " */"> kaapif_dfg_switch.h
makeheader "/*" " *" " */"> kaapif_adaptive_switch.h

makeswitchdfg >> kaapif_dfg_switch.h
makeswitchadaptative >> kaapif_adaptive_switch.h

while [ $COUNTER -ge 0 ]
do
      m4 -DKAAPI_NUMBER_PARAMS=$NUMBER -DKAAPI_MAX_NUMBER_PARAMS=$MAX_NUMBER_PARAMS m4_macros  kaapif_dfg_switch.m4 >> kaapif_dfg_switch.h
      m4 -DKAAPI_NUMBER_PARAMS=$NUMBER -DKAAPI_MAX_NUMBER_PARAMS=$MAX_NUMBER_PARAMS m4_macros  kaapif_adaptive_switch.m4 >> kaapif_adaptive_switch.h
      echo "Generating file: $file step $NUMBER :-)"
      NUMBER=`expr $NUMBER + 1`
      COUNTER=`expr $COUNTER - 1`
done

makeendswitch >> kaapif_dfg_switch.h
makeendswitch >> kaapif_adaptive_switch.h

#############################################################
## various header forms
#############################################################
makeheader "/*" " *" " */"> kaapif_inc.h
makeheader "!" "!" "!"> kaapif.inc
makeheader "C" "C" "C"> kaapif.inc.f90
makeheader "!" "!" "!"> kaapif.inc.f95

m4 -DMODE=C m4_macros kaapif_inc.m4 >> kaapif_inc.h
m4 -DMODE=F95 m4_macros kaapif_inc.m4 >> kaapif.inc
m4 -DMODE=F90 m4_macros kaapif_inc.m4 >> kaapif.inc.f90
m4 -DMODE=F95 m4_macros kaapif_inc.m4 >> kaapif.inc.f95
